#################################################
# DreamCore settings configuration file #
#################################################
[dreamcore]

###################################################################################################
# DC TELEPORT SYSTEM
#
#    DC.Teleport.MenuItemsPerPage
#        Description: The max menu item count displayed per menu page.
#        Note:        Must lager than 0
#        Default:     5
#
#    DC.Teleport.EnableRemind
#        Description: Enable or disable remind popup box before player teleport.
#        Note:        All teleporters use the same setting! If a teleport action costs money, point
#                     or honor, this setting may useless.
#        Default:     0 - disable
#                     1 - enable
#
#    DC.Teleport.CheckReq
#        Description: Enable or disable requirement check before player teleport.
#        Note:        All teleporters use the same setting!
#        Default:     0 - disable
#                     1 - enable
#
#    DC.Teleport.CheckCost
#        Description: Enable or disable cost check before player teleport.
#        Note:        All teleporters use the same setting!
#        Default:     0 - disable
#                     1 - enable
#
#    DC.Teleport.CheckVisible
#        Description: Enable or disable teleport visible check when player open teleport menu.
#        Note:        All teleporters use the same setting!
#        Default:     0 - disable
#                     1 - enable
#
###################################################################################################

DC.Teleport.MenuItemsPerPage = 5
DC.Teleport.EnableRemind     = 1
DC.Teleport.CheckReq         = 1
DC.Teleport.CheckCost        = 1
DC.Teleport.CheckVisible     = 1

###################################################################################################
# DC COMPOSE SYSTEM
#
#    DC.Compose.MenuItemsPerPage
#        Description: The max menu item count displayed per menu page.
#        Note:        Must lager than 0
#        Default:     5
#
###################################################################################################

DC.Compose.MenuItemsPerPage = 5
DC.Compose.DefaultLootLimit = 1
DC.Compose.MaxLootLimit     = 5
DC.Compose.CheckReq         = 1
DC.Compose.CheckCost        = 1

